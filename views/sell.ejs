<main class="sell_form">
  <h2>Upload a new item here!</h2>
  <form action="/api/items" method="POST" id="new-item-form">
    <div class="new-item-form">
      <label for="new-item-form">Title</label>
      <input type="text" name="title" placeholder="Title">
    </div>

    <div class="new-item-form">
      <label for="new-item-form">Description</label>
      <textarea placeholder="Description" name="description" cols="30" rows="5"></textarea>
    </div>


    <div class="new-item-form">
      <label for="new-item-form">Price</label>
      <input placeholder="Price" type="number" name="price">
    </div>

    <div class="new-item-form">
      <label for="new-item-form">Image</label>
      <input type='text' placeholder="Image URL" name="photo">
    </div>


      <div class="new-item-form">
          <button>Create</button>
          <a id="item-form" href="/">Cancel</a>
      </div>

  </form>
</main>
